      <Grid Anchor="C,T" Size="parent,45" Offset="0,3" Style="ProductionListHeaderGrid">
        <Label Style="GrayGlow24" Anchor="C,C" Offset="0,-3" String="{TXT_KEY_TECH_AWARD_TITLE:upper}" ID="TitleLabel" />
        <Grid Style="TabSpacer" Size="parent,5" Offset="0,3" Anchor="L,B"/>
      </Grid>
      <!--=======================================================================================================================-->
      <!-- Quote, Label, opened with the Tech -->
      <Stack Anchor="C,T" Offset="0,64"   Size="0,0" StackGrowth="Bottom" Padding="0" >
        <Label Anchor="C,C"  Offset="0,0" Style="WhiteShadow22" String="Technology Name" ID="TechName"/>
        <Box Anchor="C,C"  Offset="0,0"   Size="500,18" Color="White.0" />
        <Image Anchor="C,C" Offset="0,0"  Color="255,255,255,150" Texture="bar500x2.dds" Size="500.1" />
        <Box Anchor="C,C"  Offset="0,0"   Size="500,14" Color="White.0" />
        <Label Anchor="C,C"  Offset="0,0"  WrapWidth="500" Style="FontNormal18" LeadingOffset="3"  ColorSet="Beige_Black_Alpha" FontStyle="Shadow" String="." ID="TechQuote"/>
        <Stack Anchor="C,C" Offset="0,0"   Size="0,0" StackGrowth="Right" Padding="-12" ID="BonusStack" >
          <Image Anchor="C,C" Texture="64x64FrameButtons.dds" Size="64,64" ID="B1_back">
            <Button NoStateChange="1" Anchor="C,C" Size="64,64"  ID="B1"/>
          </Image>
          <Image Anchor="C,C" Texture="64x64FrameButtons.dds" Size="64,64" ID="B2_back">
            <Button NoStateChange="1" Anchor="C,C" Size="64,64"  ID="B2"/>
          </Image>
            <Image Anchor="C,C" Texture="64x64FrameButtons.dds" Size="64,64" ID="B3_back">
            <Button NoStateChange="1" Anchor="C,C" Size="64,64"  ID="B3"/>
          </Image>
          <Image Anchor="C,C" Texture="64x64FrameButtons.dds" Size="64,64" ID="B4_back">
            <Button NoStateChange="1" Anchor="C,C" Size="64,64"  ID="B4"/>
          </Image>
          <Image Anchor="C,C" Texture="64x64FrameButtons.dds" Size="64,64" ID="B5_back">
            <Button NoStateChange="1" Anchor="C,C" Size="64,64"  ID="B5"/>
          </Image>
        </Stack>
        <Box Anchor="C,C"  Offset="0,0"   Size="500,30" Color="White.0" />
        <Label Anchor="C,C"  Offset="0,0"  WrapWidth="500" Style="FontNormal16" LeadingOffset="3"  ColorSet="Beige_Black_Alpha" FontStyle="Shadow" String="." ID="TechHelp"/>
        <Box Anchor="C,C"  Offset="0,0"   Size="500,30" Color="White.0" />
        <Box Anchor="C,C" Offset="0,0"   Size="520,56" Color="255,255,255,0" >
          <GridButton Anchor="C,C"  Style="SmallButton" Size="150,32"  Offset="0,0" StateOffsetIncrement="0,0" ID="ContinueButton"  >
            <Label Anchor="C,C"  Offset="0,0"  String="TXT_KEY_TECH_AWARD_BUTTON" Style="FontNormal18" ColorSet="Beige_Black_Alpha" FontStyle="Shadow"  />
          </GridButton>
        </Box>
      </Stack>

      <Image Anchor="L,T" Offset="-10,40"  Texture="TechIconBacking.dds" Size="128,128">
        <Image Texture="TechnologyAtlas1024.dds" Size="128,128" ID="TechIcon"/>
      </Image>
    </Grid>
  </AlphaAnim>
