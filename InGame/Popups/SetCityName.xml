<?xml version="1.0" encoding="utf-8"?>

<Context Layer="Modal">
    <!-- ==================================================================	-->
    <Box ID="Background" Color="Black,200" Size="Full,Full" >			
        <Box Anchor="C,C" Size="354,164" Color="255,255,255,0" >

            <Grid Anchor="C,C" Offset="0,0" Size="350,180" Padding="0,0" Style="GridBlackIndent8" Hidden="0" >
                <Grid Anchor="C,C" Offset="0,0" Size="354,184" Padding="0,0" Style="Grid9Frame" Hidden="0" >

                    <Stack Anchor="L,T" Offset="20,30" StackGrowth="Bottom" Padding="20" ID="Stack" >
                        <!-- City Name -->
                        <Label ID="CityLabel"	Anchor="L,T" Style="FontNormal22" ColorSet="Beige_Black_Alpha" FontStyle="Shadow" String="TXT_KEY_PRODPANEL_CITY_NAME"  />
                        <Label ID="TextDescription" Anchor="L,T" Style="FontNormal14" ColorSet="Beige_Black_Alpha" FontStyle="Shadow" String="TXT_KEY_PRODPANEL_CITY_NAME_ILLEGAL_CHARACTERS" />
                        <Box					Anchor="L,T" Offset="0,-10" Size="315,26" Color="100,110,120,255" ID="CityEditbox">
                            <Box				Anchor="C,C"  Size="313,24" Color="0,0,0,255" >
                                <EditBox ID="EditCityName" CallOnChar="1" EditMode="1" Size="313,22" Anchor="C,C" Offset="0,2" Style="FontNormal20" MaxLength="15" />
                            </Box>
                        </Box>
                    </Stack>
                </Grid>
            </Grid>

            <!-- No Button  -->
            <GridButton Anchor="C,B"  Style="SmallButton" Size="150,32"  Offset="-85,20" StateOffsetIncrement="0,0" ID="CancelButton" >
                <Label Anchor="C,C"  Offset="0,0"  String="TXT_KEY_CANCEL_BUTTON" Style="FontNormal18" ColorSet="Beige_Black_Alpha" FontStyle="Shadow"  />
            </GridButton>

            <!-- Yes Button  -->
            <GridButton Anchor="C,B"  Style="SmallButton" Size="150,32"  Offset="85,20" StateOffsetIncrement="0,0" ID="AcceptButton" >
                <Label Anchor="C,C"  Offset="0,0"  String="TXT_KEY_ACCEPT_BUTTON" Style="FontNormal18" ColorSet="Beige_Black_Alpha" FontStyle="Shadow"  />
            </GridButton>
                
        </Box>
    </Box>
</Context>
